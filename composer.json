{
    "name": "datlechin/flarum-copy-links",
    "description": "Adds 'Copy Link' controls to posts, discussions and users card.",
    "keywords": [
        "flarum",
        "flarum-extension",
        "copy links"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Ngo Quoc Dat",
            "email": "datlechin@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/datlechin/flarum-copy-links",
        "forum": "https://discuss.flarum.org"
    },
    "homepage": "https://ngoquocdat.com",
    "extra": {
        "flarum-extension": {
            "title": "Copy Links",
            "category": "feature",
            "icon": {
                "name": "fas fa-link",
                "color": "#fff",
                "backgroundColor": "#D3241C"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": false,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": false,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    }
}
